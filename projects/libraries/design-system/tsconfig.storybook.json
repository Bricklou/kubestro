{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": ["src/**/*.stories.tsx", ".storybook/**/*"]
}
